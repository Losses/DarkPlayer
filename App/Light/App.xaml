<Application
    x:Class="Light.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Custom styles -->
                <ResourceDictionary Source="Styles/CommonStyles.xaml"/>
                <ResourceDictionary Source="Styles/LightContentDialogStyle.xaml"/>
                <!-- Item templates -->
                <ResourceDictionary Source="ItemTemplates/SplitViewItemTemplates.xaml" />
                <!-- App Res -->
                <ResourceDictionary Source="Common/ThemeAppResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
