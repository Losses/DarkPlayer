<ContentDialog
    x:Class="Light.Flyout.DeleteConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Confirm deletion"
    Style="{StaticResource LightContentDialogStyle}"
    PrimaryButtonText="Okay"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    x:Uid="DeleteConfirmationContentDialog">

    <Grid>
        <TextBlock 
            x:Name="DeleteConfirmTextBlock"
            Style="{StaticResource BaseTextBlockStyle}"
            Width="360"
            Text="You are about to delete {0} from your collection." Margin="0,10,0,0" />
    </Grid>
</ContentDialog>
